<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="myFileAppender" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date [line %line][logger %logger][class %class][method %method] %message%newline" />
        </layout>
        <param name="file" value="myLog2.log" />
    </appender>
    <appender name="A1" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%date [line %line][logger %logger][class %class][method %method] %message%newline" />
        </layout>
        <param name="file" value="myLog3.log" />
    </appender>
    <appender name="A2" class="LoggerAppenderFile" >
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="[class %class][method %method] %date [line %line][logger %logger] %message%newline" />
        </layout>
        <param name="file" value="myLog4.log" />
    </appender>
    <root>
        <appender_ref ref="A1" />
    </root>
     <logger name="foo">
        <appender_ref ref="A2" />
    </logger>
    <logger name="fol">
        <appender_ref ref="myFileAppender" />
    </logger>
</configuration>